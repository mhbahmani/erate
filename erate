#!/bin/bash

dollar_price_link="https://www.tgju.org/chart/price_dollar_rl"

get_dollar_price(){

	response=$(wget -q -O- $dollar_price_link | grep "نرخ فعلی:")
	dollar_price=$(echo $response | cut -d '>' -f 5 | cut -d '<' -f 1)

}

help(){
	echo "help!"
}

case $1 in
        dollar | d)
                get_dollar_price
		echo $dollar_price
                ;;
        --help | -h) 
                help
                ;;
        *)
		echo "all exchanges"
                ;;
esac

